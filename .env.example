# ─── Polymarket Credentials ──────────────────────────────────────
POLYMARKET_PRIVATE_KEY=your_wallet_private_key_without_0x
POLYMARKET_API_KEY=your_api_key
POLYMARKET_API_SECRET=your_api_secret
POLYMARKET_API_PASSPHRASE=your_passphrase
POLYMARKET_SIGNATURE_TYPE=0
POLYMARKET_FUNDER_ADDRESS=

# ─── API Endpoints (defaults shown, override if needed) ─────────
# POLYMARKET_CLOB_URL=https://clob.polymarket.com
# POLYMARKET_GAMMA_URL=https://gamma-api.polymarket.com
# POLYMARKET_WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws/market

# ─── Strategy Parameters ────────────────────────────────────────
BOT_MIN_EDGE_CENTS=2.0         # Min combined edge in cents
BOT_BID_IMPROVE_CENTS=1.0      # Cents above best bid
BOT_DEFAULT_SIZE=5.0            # Shares per leg
BOT_MAX_SIZE=20.0               # Max shares per leg
# ─── Market Filter (comma-separated, case-insensitive) ─────────
BOT_MARKET_KEYWORDS=bitcoin,btc,ethereum,eth,solana,sol,crypto
BOT_PRICE_KEYWORDS=price,reach,hit,above,below,dip,up or down,market cap

# ─── Risk Limits ────────────────────────────────────────────────
BOT_MAX_OPEN_SETS=10
BOT_MAX_DAILY_LOSS=50.0         # USD daily loss limit
BOT_MAX_TOTAL_EXPOSURE=200.0    # USD max capital at risk
BOT_ONE_LEG_TIMEOUT=180.0       # Seconds before abandoning one-leg

# ─── Risk Adjustment ────────────────────────────────────────────
BOT_LOSS_STREAK_THRESHOLD=3     # Consecutive losses before scaling down
BOT_LOSS_STREAK_SCALE=0.5       # Multiply size by this per streak beyond threshold
BOT_MIN_RISK_MULTIPLIER=0.25    # Never scale below 25% of default size

# ─── Redemption (redeem as soon as market ends to lock profit) ───
BOT_REDEMPTION_CHECK_INTERVAL=1.0   # Seconds between resolution checks (default 1 = redeem ASAP)
BOT_REDEMPTION_GRACE=0.0            # Seconds after end_time before attempting (0 = immediate)
BOT_REDEMPTION_DEADLINE=600.0       # Seconds after end_time before flagging as stuck
BOT_MAX_REDEMPTION_FAILURES=3       # Consecutive failures → suspected blacklist → kill switch

# ─── Persistence ────────────────────────────────────────────────
BOT_LOG_DIR=bot/logs
BOT_TRADE_LOG=bot/logs/trades.json
